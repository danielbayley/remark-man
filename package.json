{
  "name": "remark-man",
  "version": "2.0.1",
  "description": "Compile Markdown to man pages (roff) with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "man",
    "manual",
    "roff",
    "ronn",
    "remark"
  ],
  "dependencies": {
    "mdast-util-to-string": "^1.0.0",
    "unist-util-visit": "^1.0.0",
    "remark-slug": "^4.0.0"
  },
  "repository": "wooorm/remark-man",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js",
    "lib/"
  ],
  "devDependencies": {
    "browserify": "^12.0.0",
    "d3-dsv": "^0.2.0",
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-comment-config": "^2.0.0",
    "remark-github": "^4.0.1",
    "remark-lint": "^2.0.0",
    "remark-toc": "^2.0.0",
    "remark-validate-links": "^2.0.0",
    "tape": "^4.0.0",
    "vfile": "^1.0.0"
  },
  "scripts": {
    "build-uniglyph": "bash script/build-unigroff.sh",
    "build-md": "remark . --quiet",
    "build-bundle": "browserify index.js --bare -s remarkMan > remark-man.js",
    "build-mangle": "esmangle remark-man.js > remark-man.min.js",
    "build": "npm run build-uniglyph && npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test/index.js",
    "test-coverage": "istanbul cover test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
