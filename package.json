{
  "name": "remark-man",
  "version": "7.0.0",
  "description": "remark plugin to compile Markdown to man pages (roff)",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "man",
    "manual",
    "roff",
    "ronn"
  ],
  "repository": "remarkjs/remark-man",
  "bugs": "https://github.com/remarkjs/remark-man/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "github-slugger": "^1.0.0",
    "groff-escape": "^1.0.0",
    "mapz": "^1.0.0",
    "mdast-util-definitions": "^2.0.0",
    "mdast-util-to-string": "^1.0.0",
    "months": "^2.0.0",
    "unist-util-visit": "^2.0.0",
    "zwitch": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "is-hidden": "^1.0.0",
    "negate": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^8.0.0",
    "remark-footnotes": "^1.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-parse": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "remark-stringify": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^2.0.0",
    "unified": "^9.0.0",
    "vfile": "^4.0.0",
    "xo": "^0.32.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test/ && prettier . --write && xo --fix",
    "build-bundle": "browserify . -s remarkMan > remark-man.js",
    "build-mangle": "browserify . -s remarkMan -p tinyify > remark-man.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/prefer-optional-catch-binding": "off",
      "complexity": "off",
      "guard-for-in": "off"
    },
    "ignores": [
      "remark-man.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
